<div class="row page">

	<% if (theme.widgets.length) { %>
	<div class="col-md-9">
	<% } else { %>
	<div class="col-md-12">
	<% } %>

		<%- partial('post/slogan') %>
		<div id="top_search"></div>
		<div class="mypage">
		
		<!-- title and entry -->
		<% page.posts.each(function(item){ %>
			<%- partial('post/title', {item: item, index: index}) %>
			<% if (config.auto_excerpt.enable) { %>
				<%- truncate(strip_html(item.content), {length: config.auto_excerpt.length, omission: '..'}) %>
			<% } else { %>
				<%- partial('post/entry', {item: item, index: index}) %>
			<% } %>
		<% }); %>

		</div>

		<!-- pagination -->
		<div>
  		<center>
		<%- partial('index_pagination') %>
  		</center>
		</div>

		
		
	</div> <!-- col-md-9 -->

	<% if (theme.widgets.length) { %>
		<%- partial('sidebar') %>
	<% } %>
	
</div> <!-- row-fluid -->